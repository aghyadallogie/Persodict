generator client {
    provider = "prisma-client-js"
    previewFeatures = ["mongodb"]
}

datasource db {
    provider = "mongodb"
    url      = env("DATABASE_URL")
}

model User {
    id   String @id @default(auto()) @map("_id") @db.ObjectId
    name String
}

model Word {
    authorId    String
    id          String      @id @default(auto()) @map("_id") @db.ObjectId
    translation Json
}